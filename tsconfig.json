{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}